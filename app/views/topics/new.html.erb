<h1> New Topic </h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for topics:</p>
    <ul>
      <li>Be cool</li>
      <li>puns are strongly encouraged</li>
      <li>'Merica</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter Topic Title here" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter Topic description here" %>
    </div>

    <div class="form-group">
      <%= f.label :public, class: 'checkbox' do %>
        <%= f.check_box :public %> Public Topic
      <% end %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
