<h2>Confirmation</h2>
<div class="row">
 <div class="col-md-4">
   <h4> Is this Right?</h4>
   <h5> Name: <%= @user.name %> </h5>
   <h5> Email: <%= @user.email %> </h5>
 </div>
</div>

<div class="row">
  <div class="col-md-4", style="width: auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4", style="width: auto;">
    <%= button_to "No", { controller: "users", action: "new", params: params }, class: 'btn btn-danger', method: :get %>
  </div>
</div>
